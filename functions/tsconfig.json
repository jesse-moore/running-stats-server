{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        // "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "ES6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": ["src/**/*.ts", "tests/**/*.ts", "src/utils/.env.ts"],
    "exclude": ["test_db"]
}
